<section class="bg-white py-20">
  <div class="mx-auto px-4 container">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <div class="inline-flex items-center bg-yellow-100 mb-6 px-4 py-2 rounded-full font-semibold text-[10px] text-yellow-800 md:text-xs xl:text-sm">
        Service Focus: Customization & Individual Needs
      </div>
      <h2 class="mb-6 font-bold text-slate-900 text-2xl sm:text-3xl md:text-4xl lg:text-5xl xl:text-6xl leading-tight">
        Tailored
        <span class="bg-clip-text bg-gradient-to-r from-yellow-500 to-yellow-600 text-transparent">
          Growth Partnerships
        </span>
      </h2>
      <p class="text-slate-600 text-base md:text-lg xl:text-xl leading-relaxed">
        Every client is unique, and so should be their financial strategy. We create personalized partnerships that align with your specific goals, risk tolerance, and vision for the future.
      </p>
    </div>

    <!-- Main Service Features -->
    <div class="gap-8 md:gap-5 grid md:grid-cols-2 lg:grid-cols-3 mb-16">
      <!-- Strategic Wealth Cultivation -->
      <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl overflow-hidden transition-all duration-300">
        <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 p-4 md:p-6 xl:p-8 text-slate-900">
          <div class="flex justify-center items-center bg-white/20 mb-6 rounded-2xl size-12 md:size-14 xl:size-16">
             <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-target-icon lucide-target"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>
          </div>
          <h3 class="mb-4 font-bold text-lg md:text-xl xl:text-2xl">Strategic Wealth Cultivation</h3>
          <p class="mb-6 text-slate-800 leading-relaxed">
            We work with you to design personalized strategies that align with your financial aspirations, focusing on long-term appreciation and resilience.
          </p>
          <div class="space-y-3">
            <div class="flex items-center text-slate-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-5 xl:size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big-icon lucide-circle-check-big"><path d="M21.801 10A10 10 0 1 1 17 3.335"/><path d="m9 11 3 3L22 4"/></svg>
              Personalized strategy development
            </div>
            <div class="flex items-center text-slate-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-5 xl:size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big-icon lucide-circle-check-big"><path d="M21.801 10A10 10 0 1 1 17 3.335"/><path d="m9 11 3 3L22 4"/></svg>
              Long-term appreciation focus
            </div>
            <div class="flex items-center text-slate-800">
              <svg xmlns="http://www.w3.org/2000/svg" class="size-4 md:size-5 xl:size-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-circle-check-big-icon lucide-circle-check-big"><path d="M21.801 10A10 10 0 1 1 17 3.335"/><path d="m9 11 3 3L22 4"/></svg>
              Resilience-based planning
            </div>
          </div>
        </div>
      </div>

      <!-- Diversified Opportunity Access -->
      <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl transition-all duration-300">
        <div class="p-4 md:p-6 xl:p-8">
          <div class="flex justify-center items-center bg-gradient-to-br from-blue-100 to-blue-200 mb-6 rounded-2xl size-12 md:size-14 xl:size-16 group-hover:scale-110 transition-transform duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-zap-icon lucide-zap"><path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"/></svg>
          </div>
          <h3 class="mb-4 font-bold text-slate-900 text-lg md:text-xl xl:text-2xl">Diversified Opportunity Access</h3>
          <p class="mb-6 text-slate-600 leading-relaxed">
            Gain entry to a curated selection of high-potential growth areas, meticulously researched and strategically managed for optimal performance.
          </p>
          <div class="space-y-4">
            <div class="bg-slate-50 p-4 rounded-lg">
              <h4 class="mb-2 font-semibold text-slate-900">Curated Opportunities</h4>
              <p class="text-slate-600 text-xs md:text-sm">Access to exclusive, high-potential investment areas</p>
            </div>
            <div class="bg-slate-50 p-4 rounded-lg">
              <h4 class="mb-2 font-semibold text-slate-900">Strategic Management</h4>
              <p class="text-slate-600 text-xs md:text-sm">Professional oversight and active portfolio management</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Dedicated Partnership Support -->
      <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl transition-all duration-300">
        <div class="p-4 md:p-6 xl:p-8">
          <div class="flex justify-center items-center bg-gradient-to-br from-green-100 to-green-200 mb-6 rounded-2xl size-12 md:size-14 xl:size-16 group-hover:scale-110 transition-transform duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield-icon lucide-shield"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/></svg>
          </div>
          <h3 class="mb-4 font-bold text-slate-900 text-lg md:text-xl xl:text-2xl">Dedicated Partnership Support</h3>
          <p class="mb-6 text-slate-600 leading-relaxed">
            Your success is our priority. Benefit from direct access to our experienced team, providing ongoing guidance and transparent communication.
          </p>
          <div class="space-y-3">
            <% ["Direct access to expert advisors", "Ongoing guidance and support", "Transparent communication", "Regular performance reviews"].forEach(item => { %>
              <div class="flex items-center text-slate-700">
                <div class="bg-green-500 mr-3 rounded-full size-2"></div>
                <%= item %>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>

    <!-- Partnership Process -->
    <div class="bg-gradient-to-br from-slate-50 to-yellow-50 p-8 lg:p-12 rounded-3xl">
      <div class="mb-12 text-center">
        <h3 class="mb-4 font-bold text-slate-900 text-xl md:text-2xl xl:text-3xl">Your Tailored Partnership Journey</h3>
        <p class="mx-auto max-w-2xl text-slate-600 text-sm md:text-base xl:text-lg">
          Our systematic approach ensures every aspect of your financial strategy is customized to your unique circumstances and aspirations.
        </p>
      </div>

      <div class="gap-6 grid md:grid-cols-3 lg:grid-cols-4">
        <% const steps = [
          { step: 1, title: "Initial Consultation", desc: "Comprehensive assessment of your financial goals and current position", colors: "from-yellow-400 to-yellow-500" },
          { step: 2, title: "Strategy Design", desc: "Custom strategy development aligned with your specific objectives", colors: "from-blue-400 to-blue-500" },
          { step: 3, title: "Implementation", desc: "Careful execution of your personalized investment strategy", colors: "from-green-400 to-green-500" },
          { step: 4, title: "Ongoing Support", desc: "Continuous monitoring, guidance, and strategy refinement", colors: "from-purple-400 to-purple-500" }
        ]; %>
        <% steps.forEach(({ step, title, desc, colors }) => { %>
          <div class="text-center">
            <div class="size-12 md:size-14 xl:size-16 bg-gradient-to-br <%= colors %> rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">
              <%= step %>
            </div>
            <h4 class="mb-2 font-bold text-slate-900 text-sm md:text-base xl:text-lg"><%= title %></h4>
            <p class="text-slate-600 text-xs md:text-sm"><%= desc %></p>
          </div>
        <% }) %>
      </div>

      <div class="mt-12 text-center">
        <a href="/create" class="group inline-flex items-center bg-gradient-to-r from-yellow-500 hover:from-yellow-600 to-yellow-600 hover:to-yellow-700 shadow-lg hover:shadow-xl px-8 py-4 font-bold text-slate-900 text-sm md:text-base xl:text-lg transition-all duration-300">
          Start Your Partnership
          <span class="ml-2 size-5 transition-transform group-hover:translate-x-1 duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide-arrow-right lucide-arrow-right-icon lucide"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
          </span>
        </a>
      </div>
    </div>
  </div>
</section>
