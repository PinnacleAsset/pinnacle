<div class="relative mb-4">
  <label for="<%= id %>" class="block font-medium text-slate-800 cursor-pointer"><%= label %> <% if (required) { %>
    <span class="text-red-500">*</span>
    <% } %></label>
  <input type="<%= type %>" id="<%= id %>" name="<%= name %>" class="mt-1 px-4 py-3 pr-10 border focus:border-yellow-500 border-black/10 rounded-md focus:outline-none w-full" placeholder="<%= placeholder || '' %>" <%= required ? 'required' : '' %> />
  <% if (type === 'password') { %>
  <span class="top-[30%] md:top-[35%] xl:top-[40%] right-0 absolute inset-y-0 flex items-center pr-3 text-yellow-500 text-lg md:text-xl xl:text-2xl cursor-pointer" onclick="togglePasswordVisibility('<%= id %>')">
    <i id="<%= id %>-icon" class="ph-duotone ph-eye"></i>
  </span>
  <% } %>
</div>