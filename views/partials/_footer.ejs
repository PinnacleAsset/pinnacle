    <!-- Main Footer Content -->
    <div class="gap-8 grid lg:grid-cols-3 xl:grid-cols-4 mb-12">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-2 mb-6">
          <div class="flex justify-center items-center bg-yellow-500 rounded-lg md:size-9 xl:size-10 szie-8">
            <svg class="size-6 text-slate-900" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path d="M3 17l6-6 4 4 8-8" />
              <path d="M14 7h7v7" />
            </svg>
          </div>
          <div class="font-bold text-base md:text-lg xl:text-xl">
            Pinnacle <span class="text-yellow-500">Asset</span>
          </div>
        </div>
        <p class="mb-6 text-slate-300 leading-relaxed">
          Empowering your financial future through innovative strategies, expert guidance, and comprehensive
          educational resources.
        </p>
        <div class="flex space-x-4">
          <!-- Social Icons -->
          <button class="hover:bg-slate-800 p-2 rounded text-slate-300 hover:text-yellow-500">
            <svg class="size-5" fill="currentColor" viewBox="0 0 24 24">
