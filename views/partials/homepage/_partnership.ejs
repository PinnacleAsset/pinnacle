<section class="bg-white py-20">
  <div class="mx-auto px-4 container">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <div class="inline-flex items-center bg-yellow-100 mb-6 px-4 py-2 rounded-full font-semibold text-[10px] text-yellow-800 md:text-xs xl:text-sm">
        Our Partnership Philosophy
      </div>
      <h2 class="mb-6 font-bold text-slate-900 text-xl sm:text-2xl md:text-4xl lg:text-4xl xl:text-5xl">
        Your Success is Our
        <span class="bg-clip-text bg-gradient-to-r from-yellow-500 to-yellow-600 text-transparent">
          Mission
        </span>
      </h2>
      <p class="text-slate-600 text-base md:text-lg xl:text-xl leading-relaxed">
        We believe in building lasting partnerships through transparency, expertise, and unwavering commitment to your financial goals. Every strategy is tailored to your unique vision of success.
      </p>
    </div>

    <!-- Partnership Pillars -->
    <div class="gap-4 lg:gap-6 xl:gap-8 grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mb-16">
      <% const pillars = [
        { bgClass: 'from-yellow-100 to-yellow-200', title: 'Collaborative Approach', text: 'We work alongside you, not for you. Every decision is made together, ensuring alignment with your vision.', icon: 'users' },
        { bgClass: 'from-blue-100 to-blue-200', title: 'Precision Planning', text: 'Bespoke strategies crafted with meticulous attention to your specific circumstances and objectives.', icon: 'target' },
        { bgClass: 'from-green-100 to-green-200', title: 'Innovation Focus', text: 'Cutting-edge solutions that adapt to market evolution and emerging opportunities.', icon: 'lightbulb' },
        { bgClass: 'from-purple-100 to-purple-200', title: 'Trust & Security', text: 'Your financial security is paramount. We maintain the highest standards of fiduciary responsibility.', icon: 'shield' },
      ]; %>

      <% pillars.forEach(p => { %>
        <div class="group shadow-md hover:shadow-lg border-0 rounded-xl transition-all duration-300">
          <div class="p-4 md:p-6 xl:p-8 text-center">
            <div class="size-12 md:size-14 xl:size-16 bg-gradient-to-br <%= p.bgClass %> rounded-2xl flex items-center justify-center mx-auto mb-6 group-hover:scale-110 transition-transform duration-300">
              <% if (p.icon === 'users') { %>
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                  <path d="M16 3.128a4 4 0 0 1 0 7.744" />
                  <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                  <circle cx="9" cy="7" r="4" />
                </svg>
              <% } else if (p.icon === 'target') { %>
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <circle cx="12" cy="12" r="10" />
                  <circle cx="12" cy="12" r="6" />
                  <circle cx="12" cy="12" r="2" />
                </svg>
              <% } else if (p.icon === 'lightbulb') { %>
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5" />
                  <path d="M9 18h6" />
                  <path d="M10 22h4" />
                </svg>
              <% } else if (p.icon === 'shield') { %>
                <svg xmlns="http://www.w3.org/2000/svg" class="size-6 md:size-7 xl:size-8 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z" />
                </svg>
              <% } %>
            </div>
            <h3 class="mb-3 font-bold text-slate-900 text-xl"><%= p.title %></h3>
            <p class="text-slate-600 text-sm leading-relaxed">
              <%= p.text %>
            </p>
          </div>
        </div>
      <% }); %>
    </div>

    <!-- Partnership Process -->
    <div class="bg-gradient-to-br from-slate-50 to-yellow-50 p-8 lg:p-12 rounded-3xl">
      <div class="mb-12 text-center">
        <h3 class="mb-4 font-bold text-slate-900 text-xl md:text-2xl xl:text-3xl">How We Partner With You</h3>
        <p class="mx-auto max-w-2xl text-slate-600 text-sm md:text-base xl:text-lg">
          Our proven partnership process ensures every step is transparent, collaborative, and focused on your success.
        </p>
      </div>

      <% const steps = [
        {
          step: '1', color: 'from-yellow-400 to-yellow-500', title: 'Discovery & Assessment', text: 'We begin by understanding your current position, goals, and risk tolerance through comprehensive analysis.',
          bullets: ['Financial health assessment', 'Goal alignment session']
        },
        {
          step: '2', color: 'from-blue-400 to-blue-500', title: 'Strategy Development', text: 'Together, we craft a personalized strategy that aligns with your vision and adapts to market dynamics.',
          bullets: ['Bespoke portfolio design', 'Risk management framework']
        },
        {
          step: '3', color: 'from-green-400 to-green-600', title: 'Ongoing Partnership', text: 'Continuous monitoring, education, and strategy refinement ensure you stay ahead of the curve.',
          bullets: ['Regular performance reviews', 'Educational resources']
        },
      ]; %>

      <div class="gap-8 grid md:grid-cols-3">
        <% steps.forEach(s => { %>
          <div class="group text-center">
            <div class="size-12 md:size-16 xl:size-20 bg-gradient-to-br <%= s.color %> rounded-full flex items-center justify-center mx-auto mb-6 text-white font-bold text-2xl group-hover:scale-110 transition-transform duration-300">
              <%= s.step %>
            </div>
            <h4 class="mb-3 font-bold text-slate-900 text-base md:text-lg xl:text-xl"><%= s.title %></h4>
            <p class="mb-4 text-slate-600"><%= s.text %></p>
            <div class="space-y-2">
              <% s.bullets.forEach(b => { %>
                <div class="flex justify-center items-center text-slate-600 text-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 size-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path d="M16 7h6v6" />
                    <path d="m22 7-8.5 8.5-5-5L2 17" />
                  </svg>
                  <%= b %>
                </div>
              <% }); %>
            </div>
          </div>
        <% }); %>
      </div>

      <div class="mt-12 text-center">
        <a href="/create" aria-label="Begin Your Growth Journey" class="group flex justify-center items-center bg-gradient-to-r from-yellow-500 hover:from-yellow-600 to-yellow-600 hover:to-yellow-700 shadow-lg hover:shadow-xl mx-auto px-8 py-4 rounded w-fit font-bold text-slate-900 text-sm md:text-base xl:text-lg transition-all duration-300">
          Begin Your Growth Journey
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1 duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path d="M5 12h14" />
            <path d="m12 5 7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>