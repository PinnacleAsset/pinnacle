<section class="bg-gradient-to-br from-slate-50 to-white py-20">
  <div class="mx-auto px-4 container">
    <!-- Section Header -->
    <div class="mx-auto mb-16 max-w-4xl text-center">
      <div class="inline-flex items-center bg-blue-100 mb-6 px-4 py-2 rounded-full font-semibold text-[10px] text-blue-800 md:text-xs xl:text-sm">
        Empowering Your Portfolio
      </div>
      <h2 class="mb-6 font-bold text-slate-900 text-xl sm:text-2xl md:text-4xl lg:text-4xl xl:text-5xl">
        Comprehensive
        <span class="bg-clip-text bg-gradient-to-r from-yellow-500 to-yellow-600 text-transparent">
          Wealth Solutions
        </span>
      </h2>
      <p class="text-slate-600 text-base md:text-lg xl:text-xl leading-relaxed">
        From strategic planning to educational empowerment, our diverse range of services is designed to elevate every aspect of your financial journey.
      </p>
    </div>

    <!-- Main Services Grid -->
    <div class="gap-8 grid lg:grid-cols-3 mb-16">
      <!-- Primary Service -->
      <div class="lg:col-span-2">
        <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl h-full overflow-hidden transition-all duration-300">
          <div class="p-0">
            <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 p-4 md:p-6 xl:p-8 text-slate-900">
              <div class="flex items-center mb-6">
                <div class="flex justify-center items-center bg-white/20 mr-4 rounded-2xl size-12 md:size-14 xl:size-16">
                  <!-- Trending Icon (Arrow Up) -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-6 md:w-8 h-6 md:h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
                  </svg>
                </div>
                <div>
                  <h3 class="mb-1 font-bold text-lg md:text-xl xl:text-2xl">Wealth Elevation</h3>
                  <p class="text-slate-800">Strategic Growth Solutions</p>
                </div>
              </div>
              <p class="mb-6 text-slate-800 text-sm md:text-base xl:text-lg leading-relaxed">
                Our flagship service combines innovative investment strategies with personalized portfolio management to maximize your wealth potential while managing risk effectively.
              </p>
              <div class="gap-4 grid grid-cols-2 mb-6">
                <div class="bg-white/10 p-4 rounded-lg">
                  <h4 class="mb-2 font-semibold">Portfolio Optimization</h4>
                  <p class="text-slate-800 text-xs md:text-sm">AI-driven asset allocation</p>
                </div>
                <div class="bg-white/10 p-4 rounded-lg">
                  <h4 class="mb-2 font-semibold">Risk Management</h4>
                  <p class="text-slate-800 text-xs md:text-sm">Advanced hedging strategies</p>
                </div>
              </div>
              <a href="/services" class="inline-flex items-center bg-white hover:bg-slate-50 px-4 py-2 rounded font-semibold text-yellow-600 transition-transform group-hover:translate-x-1 duration-300">
                Learn More
                <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Secondary Services -->
      <div class="space-y-8">
        <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl transition-all duration-300">
          <div class="p-4 md:p-6">
            <div class="flex justify-center items-center bg-gradient-to-br from-blue-100 to-blue-200 mb-4 rounded-xl size-8 md:size-10 xl:size-12 group-hover:scale-110 transition-transform duration-300">
              <!-- Pie Chart Icon -->
              <svg class="size-5 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3a9 9 0 1 0 9 9h-9V3z" />
              </svg>
            </div>
            <h3 class="mb-2 font-bold text-slate-900 text-base md:text-lg xl:text-xl">Portfolio Diversification</h3>
            <p class="mb-4 text-slate-600 text-xs md:text-sm">
              Strategic asset allocation across multiple sectors and geographies for optimal risk-adjusted returns.
            </p>
            <a href="/services" class="font-medium text-blue-600 hover:text-blue-700 text-xs md:text-sm">Explore Options →</a>
          </div>
        </div>

        <div class="group bg-white shadow-lg hover:shadow-xl border-0 rounded-xl transition-all duration-300">
          <div class="p-4 md:p-6">
            <div class="flex justify-center items-center bg-gradient-to-br from-green-100 to-green-200 mb-4 rounded-xl size-8 md:size-10 xl:size-12 group-hover:scale-110 transition-transform duration-300">
              <!-- Shield Icon -->
              <svg class="size-5 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" />
              </svg>
            </div>
            <h3 class="mb-2 font-bold text-slate-900 text-base md:text-lg xl:text-xl">Wealth Protection</h3>
            <p class="mb-4 text-slate-600 text-xs md:text-sm">
              Comprehensive insurance and estate planning solutions to safeguard your legacy.
            </p>
            <a href="/services" class="font-medium text-green-600 hover:text-green-700 text-xs md:text-sm">Learn More →</a>
          </div>
        </div>
      </div>
    </div>

    <!-- Additional Services -->
    <div class="gap-6 grid md:grid-cols-2 lg:grid-cols-3">
      <% const cards = [
        {
          title: 'Financial Education',
          desc: 'Comprehensive learning resources and personalized coaching to enhance your financial literacy.',
          icon: `<svg class="size-5 text-purple-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2" /></svg>`,
          bgClass: 'from-purple-100 to-purple-200'
        },
        {
          title: 'Corporate Solutions',
          desc: 'Tailored financial strategies for businesses, including retirement plans and executive compensation.',
          icon: `<svg class="size-5 text-orange-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7h18M3 12h18M3 17h18" /></svg>`,
          bgClass: 'from-orange-100 to-orange-200'
        },
        {
          title: 'Digital Platform',
          desc: '24/7 access to your portfolio, market insights, and educational content through our advanced platform.',
          icon: `<svg class="size-5 text-teal-800" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3" /></svg>`,
          bgClass: 'from-teal-100 to-teal-200'
        }
      ]; %>
      <% cards.forEach(c => { %>
        <div class="group bg-white shadow-md hover:shadow-lg p-4 md:p-5 xl:p-6 border-0 rounded-xl text-center transition-all duration-300">
          <div class="size-10 md:size-12 xl:size-14 bg-gradient-to-br <%= c.bgClass %> rounded-xl flex items-center justify-center mx-auto mb-4 group-hover:scale-110 transition-transform duration-300">
            <%- c.icon %>
          </div>
          <h3 class="mb-2 font-bold text-slate-900 text-sm md:text-base xl:text-lg"><%= c.title %></h3>
          <p class="text-slate-600 text-xs md:text-sm"><%= c.desc %></p>
        </div>
      <% }) %>
    </div>

    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <div class="bg-gradient-to-r from-slate-900 to-slate-800 p-8 lg:p-12 rounded-3xl text-white">
        <h3 class="mb-4 font-bold text-xl md:text-2xl xl:text-3xl">Ready to Explore Our Partnerships?</h3>
        <p class="mx-auto mb-8 max-w-2xl text-slate-300 text-base md:text-lg xl:text-xl">
          Discover how our comprehensive solutions can be tailored to your unique financial goals and aspirations.
        </p>
        <div class="flex sm:flex-row flex-col justify-center gap-4">
          <a href="/services" class="bg-gradient-to-r from-yellow-500 hover:from-yellow-600 to-yellow-600 hover:to-yellow-700 shadow-lg hover:shadow-xl px-8 py-4 rounded-lg font-bold text-slate-900 text-sm md:text-base xl:text-lg transition-all duration-300">
            Schedule Consultation
          </a>
          <a href="/services" class="bg-transparent hover:bg-white px-8 py-4 border-2 border-white rounded-lg font-semibold text-white hover:text-slate-900 text-sm md:text-base xl:text-lg">
            View All Services
          </a>
        </div>
      </div>
    </div>
  </div>
</section>