<div class="flex justify-between items-center border-[#767680] py-4 border-b border-opacity-10">
  <div class="flex items-center gap-x-1">
    <div class="<%= iconBg %> bg-opacity-10 rounded-[50%] p-2">
      <img src="<%= iconSrc %>" alt="<%= iconAlt %>">
    </div>
    <div class="flex flex-col gap-y-0.5">
      <p class="<%= textColor %> text-xs sm:text-sm md:text-base font-semibold capitalize"><%= description %></p>
      <p class="text-[#9EA0A3] text-[0.6rem] md:text-xs"><%= date %></p>
    </div>
  </div>
  <p class="<%= amountColor %> text-xs sm:text-sm md:text-base font-bold"><%= amountSign %>$<%= amount %></p>
</div>